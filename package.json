{
  "name": "novel-preview",
  "displayName": "Novel Preview",
  "description": "日本語小説向けの簡易プレビュー（縦書き/横書き、選択行ハイライト、フォントサイズ/ライト・ダーク切替、VS Codeテーマ追随）。",
  "version": "0.0.3",
  "publisher": "yuna495",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "contributes": {
    "commands": [
      {
        "command": "novelPreview.open",
        "title": "Novel Preview: プレビューを開く",
        "icon": "$(book)"
      },
      {
        "command": "novelPreview.refresh",
        "title": "Novel Preview: 再描画"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "novelPreview.open",
          "group": "navigation@100",
          "when": "resourceExtname == .txt"
        }
      ]
    },
    "configuration": {
      "title": "Novel Preview",
      "properties": {
        "novelPreview.backgroundColor": {
          "type": "string",
          "default": "#111111",
          "markdownDescription": "プレビューの背景色（例: `#ffffff`, `black`, `rgb(30,30,30)` など）"
        },
        "novelPreview.textColor": {
          "type": "string",
          "default": "#fafafafa",
          "markdownDescription": "本文のフォントカラー"
        },
        "novelPreview.activeLineBackground": {
          "type": "string",
          "default": "rgba(150, 100, 0, 0.1)",
          "markdownDescription": "プレビュー側でハイライトされる行の背景色"
        },
        "novelPreview.fontSize": {
          "type": "number",
          "default": 20,
          "minimum": 8,
          "maximum": 72,
          "markdownDescription": "本文のフォントサイズ（px）。既定: 20"
        },
        "novelPreview.showCursor": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "プレビューにカーソル（縦線）を表示するか。false で非表示。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "echo \"no build (JS only)\"",
    "package": "vsce package || echo 'Install @vscode/vsce if missing'"
  },
  "license": "MIT"
}
