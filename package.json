{
  "name": "novel-preview",
  "displayName": "Novel Preview",
  "description": "日本語小説向けの簡易プレビュー（縦書き/横書き、選択行ハイライト、フォントサイズ/ライト・ダーク切替、VS Codeテーマ追随）。",
  "version": "0.0.3",
  "publisher": "yuna495",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "contributes": {
    "commands": [
      {
        "command": "novelPreview.open",
        "title": "Novel Preview: プレビューを開く",
        "icon": "$(book)"
      },
      {
        "command": "novelPreview.refresh",
        "title": "Novel Preview: 再描画"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "novelPreview.open",
          "group": "navigation@100",
          "when": "resourceExtname == .txt"
        }
      ]
    },
    "configuration": {
      "title": "Novel Preview",
      "properties": {
        "novelPreview.fontSize": {
          "type": "number",
          "default": 20,
          "minimum": 8,
          "maximum": 72,
          "markdownDescription": "本文のフォントサイズ（px）。既定: 20"
        },
        "novelPreview.theme": {
          "type": "string",
          "enum": [
            "followVSCode",
            "light",
            "dark"
          ],
          "default": "followVSCode",
          "markdownDescription": "プレビューテーマ。`followVSCode` は VS Code の現在のカラーテーマに追随。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "echo \"no build (JS only)\"",
    "package": "vsce package || echo 'Install @vscode/vsce if missing'"
  },
  "license": "MIT"
}
